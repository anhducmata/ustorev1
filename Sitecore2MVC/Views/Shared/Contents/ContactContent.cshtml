@using Sitecore.Mvc
@model Sitecore.Data.Items.Item
@{
    Layout = null;
}
<link href="https://fonts.googleapis.com/css?family=Oleo+Script:400,700" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Teko:400,700" rel="stylesheet">
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
<link href="~/Content/Contact-Style.css" rel="stylesheet"/>
<section id="contact">
    <div class="section-content">
        <h1 class="section-header">@Model.Fields["header_title_left"] <span class="content-header wow fadeIn " data-wow-delay="0.2s" data-wow-duration="2s"> @Model.Fields["header_title_right"]</span></h1>
        <h3>@Model.Fields["message"]</h3>
    </div>
    <div class="contact-section">
        <div class="container" style="padding-left: 20%; padding-bottom: 5%">
            @Html.Sitecore().Placeholder("mailling")
        </div>
    </div>
</section>
@Html.Sitecore().Placeholder("testForm")